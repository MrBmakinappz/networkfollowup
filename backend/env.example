# NetworkFollowUp Backend - Environment Variables
# Copy this file to .env and fill in your actual values

# ==============================================
# DATABASE
# ==============================================
# Supabase Connection Pooler (Session mode)
DATABASE_URL=postgresql://postgres.[PROJECT-REF]:[PASSWORD]@aws-0-us-east-1.pooler.supabase.com:6543/postgres

# ==============================================
# JWT AUTHENTICATION
# ==============================================
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your-super-secret-jwt-key-min-32-chars

# ==============================================
# FRONTEND URL
# ==============================================
FRONTEND_URL=https://networkfollowup.netlify.app

# ==============================================
# ANTHROPIC CLAUDE API
# ==============================================
# Get from: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-api03-your-actual-key

# ==============================================
# GOOGLE OAUTH (Login + Gmail)
# ==============================================
# Get from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=GOCSPX-your-secret

# OAuth Redirect URIs (already configured in Google Console):
# - https://networkfollowup.netlify.app/auth/callback
# - https://networkfollowup-backend.vercel.app/api/emails/gmail-callback

GOOGLE_REDIRECT_URI=https://networkfollowup-backend.vercel.app/api/emails/gmail-callback

# ==============================================
# STRIPE PAYMENTS
# ==============================================
# Get from: https://dashboard.stripe.com/test/apikeys
STRIPE_SECRET_KEY=sk_test_your-secret-key
STRIPE_PUBLISHABLE_KEY=pk_test_your-publishable-key

# Product Price IDs (from Stripe Products)
STRIPE_STARTER_PRICE_ID=price_starter_id
STRIPE_PRO_PRICE_ID=price_pro_id
STRIPE_ENTERPRISE_PRICE_ID=price_enterprise_id

# Webhook Signing Secret (from Stripe Webhooks)
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# ==============================================
# ADMIN
# ==============================================
# Super admin email (has access to admin dashboard)
ADMIN_EMAIL=alessandrobrozzi1@gmail.com

# ==============================================
# NODE ENVIRONMENT
# ==============================================
NODE_ENV=production

# ==============================================
# SERVER PORT (local development only)
# ==============================================
PORT=3001
